<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="About This App:"
        android:id="@+id/aboot_app"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Sources:"
        android:id="@+id/the_sources"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/source_list"
        android:layout_alignTop="@+id/the_sources"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/author"
        android:text="Kepler Version 1.0. (c)2016. John Wheeler. CSC285. email: johnawheeler@verizon.net"
        android:layout_marginTop="422dp"
        android:layout_alignTop="@+id/source_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>