<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/gray"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/relaxing"
        android:textStyle="italic"
        android:textSize="20dp"
        android:text="Relaxing"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/audio_selector"
        android:textStyle="bold"
        android:textSize="24dp"
        android:text="Pick An Audio Track:"
        android:layout_alignBottom="@+id/the_picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/ambience"
        android:textStyle="italic"
        android:textSize="20dp"
        android:text="Ambience"
        android:layout_below="@+id/relaxing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/alientrumpet"
        android:id="@+id/the_picture"
        android:layout_below="@+id/ambience"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />


</RelativeLayout>